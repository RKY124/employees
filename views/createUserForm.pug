extends layout

block content
    include mixins/employeeForm
    +employeeForm(`/update/${employee.id}`, employee, jobtitles, stateslist)

    form(action='/add' method='post')
        label(for='first_name') First Name:
        input(id='first_name' name='first_name' type='text')

        label(for='last_name') Last Name:
        input(id='last_name' name='last_name' type='text')

        label(for='job_title') Job Title:
        select(id='job_title' name='job_title')
            each title in jobtitles
                option(value=title) #{title}

        div.address
            div.streetline
                div.streetline1
                    label(for='street_line_1') Street Line 1:
                    input(id='street_line_1' name='street_line_1' type='text')

                div.streetline2
                    label(for='street_line_2') Street Line 2:
                    input(id='street_line_2' name='street_line_2' type='text')
            div.territory
                div.city
                    label(for='city') City:
                    input(id='city' name='city' type='text')

                div.state
                    label(for='state') State:
                    select(id='state' name='state')
                        each state in stateslist
                            option(value=state) #{state}

                div.zip
                    label(for='zip') Zip:
                    input(id='zip' name='zip' type='number')

        div.personal-info-row
            div.phone
                label(for='phone_number') Phone Number:
                input(id='phone_number' name='phone_number' type='number')

            div.year
                label(for='year_hired') Year Hired:
                input(id='year_hired' name='year_hired' type='number')

        button(type='submit') Submit